@model IEnumerable<KCIAO.API.MVC.Models.DoencaModel>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Doença</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.nm_doenca)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.nm_doenca)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.id_doenca">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.id_doenca">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.id_doenca">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
